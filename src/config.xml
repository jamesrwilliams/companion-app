<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.tap-code.ots"
        versionCode = "10" 
        version     = "1.0.0" >

    <name>The Hybrid</name>

    <description>
        The companion application to the hotly anticipated game: The Hybrid.
    </description>

    <author href="https://jamesrwilliams.co.uk" email="hello@jamesrwilliams.co.uk">
        James R. Williams
    </author>
    
    <icon src="icon.png" />
    
    <preference name="webviewbounce"              	value="false" />   
    <preference name="fullscreen"                 	value="true"  /> 
    <preference name="stay-in-webview"            	value="false" />
    <preference name="show-splash-screen-spinner" 	value="false" /> 
    
    <preference name="phonegap-version" value="3.7.0" />
    
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="handset" />
    
    <gap:plugin name="org.apache.cordova.battery-status" />
    <gap:plugin name="org.apache.cordova.camera" />
    <gap:plugin name="org.apache.cordova.media-capture" />
    <gap:plugin name="org.apache.cordova.console" />
    <gap:plugin name="org.apache.cordova.contacts" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.device-motion" />
    <gap:plugin name="org.apache.cordova.device-orientation" />
    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="org.apache.cordova.file" />
    <gap:plugin name="org.apache.cordova.file-transfer" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.globalization" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.media" />
    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="org.apache.cordova.vibration" />
    
    <access origin="*"/>
    
    <icon src="res/ios/icon-60@3x.png"	gap:platform="ios"	width="180"	height="180" 	/>
    <icon src="res/ios/icon-72-2x.png"  gap:platform="ios"  width="144" height="144" 	/>
    <icon src="res/ios/icon-57-2x.png"  gap:platform="ios"  width="114" height="114" 	/>
    <icon src="res/ios/icon-72.png"     gap:platform="ios"  width="72" 	height="72" 	/>
    <icon src="res/ios/icon-57.png"     gap:platform="ios"  width="57" 	height="57" 	/>
    
	<gap:splash src="res/ios/splash_iphone3.png" 	gap:platform="ios" width="320" height="480" 	/>
	<gap:splash src="res/ios/splash_iphone4-2x.png" gap:platform="ios" width="640" height="960" 	/>
	<gap:splash src="res/ios/splash_iphone5-2x.png" gap:platform="ios" width="640" height="1136" 	/>
	<gap:splash src="res/ios/splash_iphone6-2x.png" gap:platform="ios" width="750" height="1334" 	/>

</widget>